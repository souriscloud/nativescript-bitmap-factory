{
  "name": "nativescript-bitmap-factory",
  "description": "A NativeScript module for creating and manipulating bitmap images.",
  "version": "2.0.0",
  "nativescript": {
    "platforms": {
      "ios": "7.0.0",
      "android": "7.0.0"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/souriscloud/nativescript-bitmap-factory"
  },
  "keywords": [
    "NativeScript",
    "Bitmaps",
    "Factory",
    "Factories",
    "Images",
    "Circles",
    "Lines",
    "Args",
    "Rectangles",
    "Ovals",
    "Points",
    "Text",
    "Strings",
    "PNG",
    "JPEG",
    "JPG"
  ],
  "scripts": {
    "setup": "npm i && ts-patch install"
  },
  "compilerOptions": {
    "plugins": [
      {
        "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
        "type": "raw"
      }
    ]
  },
  "author": {
    "name": "Souris.CLOUD",
    "email": "me@souris.cloud"
  },
  "license": {
    "type": "MIT",
    "url": "https://github.com/souriscloud/nativescript-bitmap-factory/blob/master/LICENSE"
  },
  "bugs": {
    "url": "https://github.com/souriscloud/nativescript-bitmap-factory/issues"
  },
  "homepage": "https://github.com/souriscloud/nativescript-bitmap-factory",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@nativescript/core": "~7.0.0",
    "@nativescript/android": "~7.0.0",
    "@nativescript/ios": "~7.0.0",
    "@nativescript/types": "~7.0.0",
    "typescript": "~3.9.0",
    "@types/node": "~14.11.2"
  }
}
